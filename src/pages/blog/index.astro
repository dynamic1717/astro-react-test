---
import { getCollection } from 'astro:content'
import Layout from '@layouts/Layout.astro'
import LocalPostCard from '@components/LocalPostCard.astro'

const posts = await getCollection('posts')
const featuredPosts = posts.filter((post) => post.data.featured)
---

<Layout title="Posts">
  <main class="container pb-10">
    <h1 class="text-7xl font-bold">Local posts</h1>

    <section class="grid grid-cols-2 gap-x-4 gap-y-8 mt-6">
      {featuredPosts.map((post) => <LocalPostCard post={post} />)}
    </section>
  </main>
</Layout>
