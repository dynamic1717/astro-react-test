---
import { Image } from 'astro:assets'
import { type CollectionEntry } from 'astro:content'

type Props = {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
---

<a href={`/blog/${post.slug}`} class="flex flex-col gap-3 bg-light p-2 rounded-3xl pb-6">
  <Image
    src={post.data.image}
    alt={post.data.title}
    class="card-border max-h-96 object-cover w-full h-full"
  />
  <div class="space-y-1 mt-auto">
    <div class="flex items-center gap-2 text-sm">
      <h3 class="font-semibold text-primary">{post.data.author}</h3>
      <span>&bull;</span>
      <span>{post.data.date}</span>
    </div>
    <h2 class="text-2xl font-semibold">{post.data.title}</h2>
  </div>
</a>
